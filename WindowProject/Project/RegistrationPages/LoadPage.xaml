<Page x:Class="Project.RegistrationPages.LoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.RegistrationPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadPage"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Podaj nazwę pliku" FontSize="18" HorizontalAlignment="Left"/>
            <TextBox x:Name="fileName" Margin="10,20,10,0"/>
            <TextBlock x:Name="messageText" Text="" Margin="10,5,10,0"/>
            <Button Content="Wczytaj" Margin="10,5,10,0" Click="Load_Button"/>
            <Button Content="Powrót do menu" Margin="10,5,10,0" Click="GoBack_Button"/>
        </StackPanel>
    </Grid>
</Page>
